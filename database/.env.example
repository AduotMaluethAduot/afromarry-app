# AfroMarry Environment Configuration
# Copy this file to .env and update with your actual values

# Environment Setting
# Set to 'local' for development, 'production' for live server
APP_ENV=local

# Admin Signup Secret Password
# This password is required to create admin accounts
# Keep this secret and never commit it to version control
ADMIN_SIGNUP_SECRET=AfroMarry_Admin_2025_Secure_Change_This

# Database Configuration (Local Development)
DB_HOST=localhost
DB_NAME=ecommerce_2025A_aduot_jok
DB_USER=root
DB_PASS=

# Database Configuration (Production Server)
# DB_HOST=your_production_host
# DB_NAME=your_production_database
# DB_USER=your_production_user
# DB_PASS=your_production_password

# Payment Gateway Configuration
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST_your_flutterwave_public_key_here
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST_your_flutterwave_secret_key_here

# Session Configuration
ADMIN_SESSION_TIMEOUT=1800
# Session timeout in seconds (1800 = 30 minutes)

# Rate Limiting Configuration
ADMIN_LOGIN_RATE_LIMIT=5
# Maximum login attempts per hour
ADMIN_LOGIN_RATE_WINDOW=3600
# Time window in seconds (3600 = 1 hour)